<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.fragment.AcademicsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_20sdp">


        <Spinner
            android:id="@+id/spinnerClass"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/bg_spinner"
            android:dropDownVerticalOffset="8dp"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Marks"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerClass" />

        <View
            android:id="@+id/textMarksDash"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/blue"
            app:layout_constraintStart_toStartOf="@+id/textMarks"
            app:layout_constraintTop_toBottomOf="@+id/textMarks" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/textMarksDash" />

        <TextView
            android:id="@+id/attendanceMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Attendance"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rec" />

        <View
            android:id="@+id/attendanceMarksDash"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/blue"
            app:layout_constraintStart_toStartOf="@+id/attendanceMarks"
            app:layout_constraintTop_toBottomOf="@+id/attendanceMarks" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/attendanceMarksDash" />

        <!-- ===== Present ===== -->
        <View
            android:id="@+id/viewPresent"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/bg_indicator_purple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pieChart" />

        <TextView
            android:id="@+id/tvPresentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="Present"
            android:textColor="@color/gray"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@id/viewPresent"
            app:layout_constraintTop_toBottomOf="@id/viewPresent" />

        <TextView
            android:id="@+id/tvPresentDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="94 days"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/viewPresent"
            app:layout_constraintTop_toBottomOf="@id/tvPresentLabel" />

        <!-- ===== Leave ===== -->
        <View
            android:id="@+id/viewLeave"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_5sdp"

            android:background="@drawable/bg_indicator_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pieChart" />

        <TextView
            android:id="@+id/tvLeaveLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="Leave"
            android:textColor="@color/gray"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@id/viewLeave"
            app:layout_constraintTop_toBottomOf="@id/viewLeave" />

        <TextView
            android:id="@+id/tvLeaveDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06 days"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/viewLeave"
            app:layout_constraintTop_toBottomOf="@id/tvLeaveLabel" />

        <!-- ===== Holiday ===== -->
        <View
            android:id="@+id/viewHoliday"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_15sdp"

            android:background="@drawable/bg_indicator_teal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pieChart" />

        <TextView
            android:id="@+id/tvHolidayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="Holiday"
            android:textColor="@color/gray"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@id/viewHoliday"
            app:layout_constraintTop_toBottomOf="@id/viewHoliday" />

        <TextView
            android:id="@+id/tvHolidayDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 days"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/viewHoliday"
            app:layout_constraintTop_toBottomOf="@id/tvHolidayLabel" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>