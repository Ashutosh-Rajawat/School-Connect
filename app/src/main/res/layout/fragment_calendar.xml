<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_20sdp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/calenderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#F3E9FA"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <!-- Previous -->
            <ImageView
                android:id="@+id/btnPrev"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Month -->
            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_70sdp"
                android:background="@drawable/bg_white_round"
                android:padding="8dp"
                android:text="April"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/tvYear"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/btnPrev"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Year -->
            <TextView
                android:id="@+id/tvYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/bg_white_round"
                android:padding="8dp"
                android:text="2025"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/tvMonth"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Next -->
            <ImageView
                android:id="@+id/btnNext"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Week Days -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvMonth" />

            <!-- Calendar Days -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/rvWeek" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- National Holidays -->
        <LinearLayout
            android:id="@+id/llHoliday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/llLeave"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calenderContainer">

            <View
                android:layout_width="@dimen/_55sdp"
                android:layout_height="6dp"
                android:background="@drawable/bg_indicator_teal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="National Holidays"
                android:textColor="#7A7A7A"
                android:textSize="@dimen/_8ssp" />
        </LinearLayout>

        <!-- Leave -->
        <LinearLayout
            android:id="@+id/llLeave"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/llSundayLeave"
            app:layout_constraintStart_toEndOf="@id/llHoliday"
            app:layout_constraintTop_toBottomOf="@+id/calenderContainer">

            <View
                android:layout_width="@dimen/_55sdp"
                android:layout_height="6dp"
                android:background="@drawable/bg_indicator_purple" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Leave"
                android:textColor="#7A7A7A"
                android:textSize="@dimen/_8ssp" />
        </LinearLayout>

        <!-- Sunday Leave -->
        <LinearLayout
            android:id="@+id/llSundayLeave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/llLeave"
            app:layout_constraintTop_toBottomOf="@+id/calenderContainer">

            <View
                android:layout_width="@dimen/_55sdp"
                android:layout_height="6dp"
                android:background="@drawable/bg_indicator_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Sunday Leave"
                android:textColor="#7A7A7A"
                android:textSize="@dimen/_8ssp" />
        </LinearLayout>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/white"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llHoliday">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
