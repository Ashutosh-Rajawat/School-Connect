<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/container"
    android:paddingVertical="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <!-- Date -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:paddingStart="@dimen/_5sdp"
        android:text="24/09/25"
        android:textColor="#1E1E3F"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toStartOf="@id/tvSubject"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dash"
        app:layout_constraintWidth_percent="0.20" />

    <!-- Subject -->
    <TextView
        android:id="@+id/tvSubject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="Hindi"
        android:textColor="#1E1E3F"
        android:paddingStart="@dimen/_8sdp"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toStartOf="@id/tvTotalMarks"
        app:layout_constraintStart_toEndOf="@id/tvDate"
        app:layout_constraintTop_toBottomOf="@+id/dash"
        app:layout_constraintWidth_percent="0.20" />

    <!-- Total Marks -->
    <TextView
        android:id="@+id/tvTotalMarks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:text="100"
        android:textColor="#1E1E3F"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toStartOf="@id/tvObtainedMarks"
        app:layout_constraintStart_toEndOf="@id/tvSubject"
        app:layout_constraintTop_toBottomOf="@+id/dash"
        app:layout_constraintWidth_percent="0.20" />

    <!-- Obtained Marks -->
    <TextView
        android:id="@+id/tvObtainedMarks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:text="70"
        android:textColor="#1E1E3F"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTotalMarks"
        app:layout_constraintTop_toBottomOf="@+id/dash"
        app:layout_constraintWidth_percent="0.40" />


</androidx.constraintlayout.widget.ConstraintLayout>