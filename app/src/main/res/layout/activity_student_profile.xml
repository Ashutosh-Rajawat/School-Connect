<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF1EC">


    <ImageView
        android:id="@+id/headerBg"
        android:layout_width="0dp"
        android:layout_height="@dimen/_237sdp"
        android:src="@drawable/studnet_profile_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/back_icon" />

    </androidx.cardview.widget.CardView>

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/profile_img"
        android:background="@drawable/circle_bg"
        android:scaleType="centerCrop"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/_75sdp"
        app:layout_constraintTop_toTopOf="@id/headerBg"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/edit"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:background="@drawable/edit"
        app:layout_constraintBottom_toBottomOf="@+id/imgProfile"
        app:layout_constraintRight_toRightOf="@id/imgProfile"
        android:translationX="@dimen/_minus5sdp"
        app:layout_constraintStart_toEndOf="@+id/imgProfile"/>

    <!-- Name -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suja Shrivastav"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/imgProfile"
        app:layout_constraintTop_toBottomOf="@+id/imgProfile"/>

    <View
        android:id="@+id/viewName"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="@dimen/_14sdp"
        android:background="@color/purple"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="@+id/tvName"
        app:layout_constraintStart_toEndOf="@+id/tvName"
        app:layout_constraintTop_toTopOf="@+id/tvName"/>

    <!-- Email -->
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="puja@shrivastav.com"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toEndOf="@id/viewName"
        app:layout_constraintTop_toTopOf="@id/viewName"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="@+id/viewName"/>

    <!-- Class Info -->
    <TextView
        android:id="@+id/tvClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11th - Science (A)"
        android:layout_marginTop="@dimen/_2sdp"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"/>

    <View
        android:id="@+id/viewClass"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="@dimen/_14sdp"
        android:background="@color/purple"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="@+id/tvClass"
        app:layout_constraintStart_toEndOf="@+id/tvClass"
        app:layout_constraintTop_toTopOf="@+id/tvClass"/>

    <!-- Email -->
    <TextView
        android:id="@+id/tvDob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21-08-2025"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toEndOf="@id/viewClass"
        app:layout_constraintTop_toTopOf="@id/viewClass"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="@+id/viewClass"/>

    <!-- Phone -->
    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 352525252"
        android:textColor="#FFFFFF"
        android:layout_marginTop="@dimen/_2sdp"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvClass"/>

    <!-- Teachers Title -->
    <TextView
        android:id="@+id/tvTeachers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teachers Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerBg"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/tvTeachersFooter"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/purple"
        app:layout_constraintStart_toStartOf="@+id/tvTeachers"
        app:layout_constraintEnd_toEndOf="@+id/tvTeachers"
        app:layout_constraintTop_toBottomOf="@+id/tvTeachers"/>


    <!-- Table Header -->
    <TextView
        android:id="@+id/tvSubjectHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:textStyle="bold"
        android:padding="12dp"
        android:textSize="@dimen/_11ssp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvTeachersFooter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvTeacherHeader"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/tvTeacherHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Teachers Name"
        android:layout_marginEnd="@dimen/_10sdp"
        android:textStyle="bold"
        android:padding="12dp"
        android:textSize="@dimen/_11ssp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/tvSubjectHeader"
        app:layout_constraintStart_toEndOf="@id/tvSubjectHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/tvSubjectHeader"/>


</androidx.constraintlayout.widget.ConstraintLayout>
